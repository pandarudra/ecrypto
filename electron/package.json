{
  "name": "ecrypto",
  "version": "1.0.0",
  "description": "Military-grade folder encryption with modern GUI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "encryption",
    "security",
    "xchacha20",
    "argon2"
  ],
  "author": "pandarudra",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.5"
  },
  "build": {
    "appId": "com.ecrypto.app",
    "productName": "Ecrypto",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "../bin",
        "to": "bin"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/appicon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/appicon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons/appicon.png",
      "category": "Utility"
    }
  }
}
