{
  "name": "ecrypto",
  "version": "1.0.0",
  "description": "Military-grade folder encryption with modern GUI",
  "main": "main.js",
  "homepage": "https://github.com/pandarudra/ecrypto",
  "author": {
    "name": "pandarudra",
    "email": "rudrapanda8206@gmail.com"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --publish never",
    "build:win": "electron-builder --win --publish never",
    "build:mac": "electron-builder --mac --publish never",
    "build:linux": "electron-builder --linux --publish never",
    "release": "electron-builder --publish always",
    "release:win": "electron-builder --win --publish always",
    "release:mac": "electron-builder --mac --publish always",
    "release:linux": "electron-builder --linux --publish always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pandarudra/ecrypto.git"
  },
  "bugs": {
    "url": "https://github.com/pandarudra/ecrypto/issues"
  },
  "keywords": [
    "encryption",
    "security",
    "xchacha20",
    "argon2"
  ],
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.5"
  },
  "build": {
    "appId": "com.ecrypto.app",
    "productName": "Ecrypto",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "../bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "assets/**/*"
    ],
    "icon": "assets/icons/key-round.png",
    "win": {
      "target": "nsis",
      "icon": "assets/icons/key-round.png"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "icon": "assets/icons/key-round.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "pandarudra <rudrapanda8206@gmail.com>",
      "vendor": "pandarudra",
      "synopsis": "Military-grade encryption tool",
      "icon": "assets/icons/key-round.png"
    }
  }
}
