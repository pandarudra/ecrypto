{
  "name": "ecrypto",
  "version": "1.0.0",
  "description": "Military-grade folder encryption with modern GUI",
  "main": "main.js",
  "homepage": "https://github.com/pandarudra/ecrypto",
  "author": {
    "name": "pandarudra",
    "email": "pandarudra@ecrypto.dev"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pandarudra/ecrypto.git"
  },
  "bugs": {
    "url": "https://github.com/pandarudra/ecrypto/issues"
  },
  "keywords": [
    "encryption",
    "security",
    "xchacha20",
    "argon2"
  ],
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.5"
  },
  "build": {
    "appId": "com.ecrypto.app",
    "productName": "Ecrypto",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "../bin",
        "to": "bin"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "pandarudra <pandarudra@ecrypto.dev>",
      "vendor": "pandarudra",
      "synopsis": "Military-grade encryption tool"
    }
  }
}
